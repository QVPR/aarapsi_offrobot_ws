<launch>
    <arg name="port"/> 
    <arg name="launch_webserver"/>
    <arg name="id"/>
    <arg name="dataset_name"/> 
    <arg name="ref_root"/>
    <arg name="cal_qry_dataset_name"/>
    <arg name="cal_ref_dataset_name"/>
    <arg name="img_dims"/>

    <include file="$(find aarapsi_intro_pack)/launch/vprp_bokeh.launch">
        <arg name="port"                    default="$(arg port)"/>
        <arg name="address"                 default="0.0.0.0"/>

        <arg name="launch_webserver"        default="$(arg launch_webserver)"/>

        <arg name="dataset_name"            default="$(arg dataset_name)"/> 
        <arg name="database_path"           default="$(find aarapsi_intro_pack)/data/compressed_sets"/>
        <arg name="ref_root"                default="$(arg ref_root)"/>
        <arg name="ref_imgs_path"           default="[$(arg ref_root)forward,$(arg ref_root)left,$(arg ref_root)right,$(arg ref_root)panorama]"/>
        <arg name="ref_odom_path"           default="$(arg ref_root)odometry.csv"/>

        <arg name="cal_qry_dataset_name"    default="$(arg cal_qry_dataset_name)"/>
        <arg name="cal_ref_dataset_name"    default="$(arg cal_ref_dataset_name)"/>
        
        <arg name="cruncher_node_name"      default="vpr_cruncher_$(arg id)"/>
        <arg name="monitor_node_name"       default="vpr_monitor_$(arg id)"/>
        <arg name="plotter_node_name"       default="vpr_plotter_$(arg id)"/>

        <arg name="img_dims"                default="$(arg img_dims)"/>
        <arg name="namespace"               default="/vpr_nodes/set_$(arg id)"/>
    </include>

</launch>